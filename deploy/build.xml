<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="SMWHalo">
	<target name="build">
		<delete dir="bin/zip" />
		<delete file="bin/smwhalo-richmedia-${version}.zip" />
		<mkdir dir="bin/zip" />
		<copy todir="bin/zip/extensions/RichMedia/import">
			<fileset dir="../import/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/RichMedia/includes">
			<fileset dir="../includes/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/RichMedia/languages">
			<fileset dir="../languages/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="bin/zip/extensions/RichMedia/patches">
			<fileset dir="../patches/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

		<copy todir="bin/zip/extensions/RichMedia/scripts">
			<fileset dir="../scripts/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>


		<copy todir="bin/zip/extensions/RichMedia/">
			<fileset file="../*">
				<exclude name="**/.svn, **/CVS" />
				<exclude name="**/*deploy*" />
			</fileset>
		</copy>

		<zip destfile="bin/smwhalo-richmedia-${version}.zip" basedir="bin/zip" />
		<delete dir="bin/zip" />
	</target>
	<target depends="mimeext" name="install">

		<copy todir="../../SemanticForms/" overwrite="true">
			<fileset dir="../patches/SemanticForms/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="../../../skins/" overwrite="true">
			<fileset dir="../patches/skins/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
	</target>
	<target name="mimeext">
		<copy todir="../../../includes/" overwrite="true">
			<fileset dir="../../../patches/includes/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="../../../extensions/" overwrite="true">
			<fileset dir="../../../patches/extensions/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>
		<copy todir="../../../skins/" overwrite="true">
			<fileset dir="../../../patches/skins/">
				<exclude name="**/.svn, **/CVS" />
			</fileset>
		</copy>

	</target>

</project>
