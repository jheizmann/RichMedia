<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<version>152</version>
		<id>RichMedia</id>
		<vendor>Ontoprise GmbH</vendor>
		<maintainer>Ontoprise GmbH</maintainer>
		<instdir>extensions/RichMedia</instdir>
		<description>
			Store richmedia files in our your wiki
		</description>
		<dependencies>
			<dependency from="1153" to="1153">MW</dependency>
			<dependency from="190" to="200">semanticforms</dependency>
			<dependency from="100" to="100">scriptmanager</dependency>
		</dependencies>
	</global>
	<codefiles>
		<!-- external codes files -->
		<file loc="extensions/SemanticForms/skins/graphics" />
		<!-- TODO: add others in skins/commons/images/icons-->
	</codefiles>
	<wikidumps>
		<file loc="extensions/RichMedia/import/RichMediaOntology_v1.4.xml" />
	</wikidumps>
	<resources>
		<!-- empty -->
	</resources>

	<configs>
		<new>
			<variable name="smwgEnableUploadConverter">
				<boolean name="smwgEnableUploadConverter"
					description="enables the upload converter">
					true
				</boolean>
			</variable>
			<require name="us_init"
				file="extensions/RichMedia/includes/RM_Initialize.php" />
			<function name="enableRichMediaExtension">
			</function>
			<require name="webdav_init"
				file="extensions/RichMedia/includes/WebDAV/WD_Initialize.php" />
			
			<patch file="extensions/RichMedia/RichMediaPatchForSF1_9.txt"
                ext="semanticforms" from="190" to="190" />
   			<patch file="extensions/RichMedia/RichMediaPatchForSF1_9_1.txt"
                ext="semanticforms" from="191" to="191" />
   			<patch file="extensions/RichMedia/RichMediaPatchForSF2_0.txt"
                ext="semanticforms" from="200" to="200" />
            <patch file="extensions/RichMedia/RichMediaPatchForMW1_15_3.txt" />

		</new>
		<uninstall>
			<patch
                file="extensions/RichMedia/RichMediaPatchForSF1_9.txt"
                ext="semanticforms" from="190" to="190" />
   			<patch
                file="extensions/RichMedia/RichMediaPatchForSF1_9_1.txt"
                ext="semanticforms" from="191" to="191" />
   			<patch
                file="extensions/RichMedia/RichMediaPatchForSF2_0.txt"
                ext="semanticforms" from="200" to="200" />
			<patch
				file="extensions/RichMedia/RichMediaPatchForMW1_15_3.txt" />
		</uninstall>
	</configs>
</deploydescriptor>

