<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<version>130</version>
		<id>RichMedia</id>
		<vendor>Ontoprise GmbH</vendor>
		<instdir>extensions/RichMedia</instdir>
		<description>
			Store richmedia files in our your wiki
		</description>
		<dependencies>
			<dependency from="1151" to="1151">MW</dependency>
			<dependency from="183" to="183">semanticforms</dependency>
			<dependency from="100" to="100">scriptmanager</dependency>
		</dependencies>
	</global>
	<codefiles>
		<!-- external codes files -->
		<file loc="extensions/SemanticForms/skins/graphics" />
		<!-- TODO: add others in skins/commons/images/icons-->
	</codefiles>
	<wikidumps>
		<file loc="extensions/RichMedia/deploy/dump.xml" />
	</wikidumps>
	<resources>
		<!-- empty -->
	</resources>

	<configs>
		<new>
			<variable name="smwgEnableUploadConverter">
				<boolean name="smwgEnableUploadConverter"
					description="enables the upload converter">
					true
				</boolean>
			</variable>
			<require name="us_init"
				file="extensions/RichMedia/includes/RM_Initialize.php" />
			<function name="enableRichMediaExtension">
			</function>
			<require name="webdav_init"
				file="extensions/RichMedia/includes/WebDAV/WD_Initialize.php" />
			
			<patch file="extensions/RichMedia/patch.txt" />
			<patch
				file="extensions/RichMedia/RichMediaPatchForMW1_15_1.txt" />
		</new>
		<uninstall>
			<patch file="extensions/RichMedia/patch.txt" />
			<patch
				file="extensions/RichMedia/RichMediaPatchForMW1_15_1.txt" />
		</uninstall>
	</configs>
</deploydescriptor>

